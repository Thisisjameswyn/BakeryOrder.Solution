@using BakeryOrder.Models;

<h1>Vendor Name</h1>

@if (Model.Count == 0)
{
  <p>There are no vendors in the list.</p>
}
<ul>
  @foreach (Vendor vend in Model)
  {
    <li><a href="/vendors/@vend.Id">@vend.VendorName</a></li>
  }
</ul>
<a href="/vendors/new">Add a new vendor.</a>
<a href='/'>Return to home page</a>

<form action="/vendors/delete" method="post">
  <button type="submit" name="button">Clear All vendors</button>
</form>