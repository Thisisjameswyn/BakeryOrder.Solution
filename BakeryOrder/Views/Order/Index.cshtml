@using BakeryOrder.Models;

<h1>Order Name</h1>

@if (Model.Count == 0)
{
  <p>There are no orders in the list.</p>
}
<ul>
  @foreach (Orders order in Model)
  {
    <li><a href="/order/@order.Id">@order.CityName</a></li>
  }
</ul>
<a href="/order/new">Add a new order.</a>

<form action="/order/delete" method="post">
  <button type="submit" name="button">Clear All orders</button>
</form>