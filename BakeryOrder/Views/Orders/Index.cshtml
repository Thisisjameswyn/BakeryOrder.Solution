@using BakeryOrder.Models;

<h1>Order Name</h1>

@if (Model.Count == 0)
{
  <p>There are no orders in the list.</p>
}
<ul>
  @foreach (Orders order in Model)
  {
    <li><a href="/orders/@order.Id">@order.OrderName</a></li>
  }
</ul>
<a href="/orders/new">Add a new order.</a>
@* <a href="/vendor/@vendor.Id">Return to vendor.</a> *@

<form action="/orders/delete" method="post">
  <button type="submit" name="button">Clear All orders</button>
</form>